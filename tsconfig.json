{
  "compilerOptions": {
    "module": "esnext", // Allows ES Modules and top-level 'await'
    "target": "es2017", // Use ES2017+ features
    "moduleResolution": "node", // Node.js module resolution
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "skipLibCheck": true, // Skip library type-checking
    "resolveJsonModule": true, // Support importing JSON
    "outDir": "./compiled", // Output for compiled .js files
    "rootDir": "./src" // Root directory for sources
  },
  "include": [
    "./src/**/*" // Include source files in the src folder
  ],
  "exclude": [
    "./node_modules", // Avoid dependencies
    "./dist", // Avoid compiled outputs
    "./dataset/**/*" // Exclude dataset files from being compiled
  ]
}
